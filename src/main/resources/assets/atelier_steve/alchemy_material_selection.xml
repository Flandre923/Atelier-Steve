<?xml version="1.0" encoding="UTF-8" ?>
<ldlib2-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Low-Drag-MC/LDLib2/refs/heads/1.21/ldlib2-ui.xsd">
    <stylesheet location="ldlib2:lss/mc.lss"/>
    <style>
        #alchemy_material_select_root {
            width: 460;
            height: 270;
            flex-direction: row;
            padding-all: 8;
            gap-all: 8;
            background: rect(rgba(0, 0, 0, 140), 6);
        }

        .panel {
            background: rect(#c6c6c6, 4, 1, #555555);
            padding-all: 6;
            gap-all: 6;
        }

        .left_panel {
            width: 240;
            flex-direction: column;
            height: 100%;
        }

        .right_panel {
            flex-grow: 1;
            flex-direction: column;
            height: 100%;
        }

        .panel_header {
            height: 22;
            align-items: center;
            justify-content: center;
            background: rect(#8e8e8e, 3);
        }

        #recipe_title {
            width: 100%;
            horizontal-align: center;
        }

        .sub_header {
            background: rect(#d4c4a8, 10, 1, #8d6e63);
            padding-horizontal: 6;
            padding-vertical: 2;
            horizontal-align: center;
            vertical-align: center;
        }

        .ingredient_nav {
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap-all: 4;
        }

        .ingredient_tabs {
            flex-direction: row;
            align-items: center;
            justify-content: center;
            width: 100%;
            gap-all: 4;
        }

        .ingredient_tab {
            width: 28;
            height: 28;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap-all: 2;
            background: none;
        }

        .ingredient_tab.active {
            background: none;
        }

        .ingredient_icon {
            width: 14;
            height: 14;
        }

        .ingredient_icon_slot {
            width: 14;
            height: 14;
        }

        .ingredient_icon_fallback {
            color: #333333;
        }

        .ingredient_count {
            color: #2b2b2b;
            horizontal-align: center;
            vertical-align: center;
            width: 100%;
        }

        .item_grid {
            flex-grow: 1;
            background: rect(rgba(0, 0, 0, 40), 3);
            padding-all: 4;
            min-height: 110;
            width: 100%;
        }

        .grid_content {
            flex-direction: column;
            gap-all: 2;
            width: 100%;
        }

        .grid_row {
            flex-direction: row;
            gap-all: 2;
            height: 18;
        }

        .grid_slot_cell {
            width: 18;
            height: 18;
            position: relative;
        }

        .grid_slot_item {
            width: 18;
            height: 18;
        }

        .grid_slot_check {
            position: absolute;
            top: -2;
            right: -2;
            width: 10;
            height: 10;
            align-items: center;
            justify-content: center;
            background: rect(#32b44a, 5);
            color: #ffffff;
            font-size: 8;
            z-index: 2;
        }

        .hint_text {
            color: #5a2a2a;
            horizontal-align: center;
        }

        .result_header {
            flex-direction: row;
            align-items: center;
            gap-all: 6;
            background: rect(#cfcfcf, 4, 1, #5a5a5a);
            padding-all: 4;
        }

        .result_slot {
            width: 26;
            height: 26;
        }

        .result_name {
            flex-grow: 1;
        }

        .section_title {
            background: rect(#d7d7d7, 4, 1, #8d8d8d);
            padding-horizontal: 4;
            padding-vertical: 2;
        }

        .materials_list {
            flex-direction: column;
            gap-all: 4;
        }

        .material_row {
            padding-vertical: 2;
        }

        .material_info {
            flex-grow: 1;
        }

        .material_name {
            flex-grow: 1;
            color: #2b2b2b;
        }

        .material_qty {
            flex-shrink: 0;
            min-width: 28;
            color: #2b2b2b;
        }

        .row_space_between {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            gap-all: 4;
            width: 100%;
        }

        .row_align_center {
            flex-direction: row;
            align-items: center;
            gap-all: 4;
        }

        .material_icon {
            width: 16;
            height: 16;
        }

        .hidden {
            display: none;
        }
    </style>
    <root id="alchemy_material_select_root">
        <element id="material_select_left" class="panel left_panel">
            <element class="panel_header">
                <label id="recipe_title"/>
            </element>
            <label id="ingredient_filter" class="sub_header"/>
            <element id="ingredient_nav" class="ingredient_nav">
                <element id="ingredient_tabs" class="ingredient_tabs"/>
            </element>
            <scroller-view id="ingredient_grid" class="item_grid"/>
            <label id="basket_hint" class="hint_text"/>
        </element>
        <element id="material_select_right" class="panel right_panel">
            <element id="result_header" class="result_header">
                <item-slot id="result_slot" class="result_slot"/>
                <label id="result_name" class="result_name"/>
            </element>
            <label id="materials_header" class="section_title"/>
            <element id="materials_list" class="materials_list"/>
        </element>
    </root>
</ldlib2-ui>
