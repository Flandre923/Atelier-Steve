<?xml version="1.0" encoding="UTF-8" ?>
<ldlib2-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Low-Drag-MC/LDLib2/refs/heads/1.21/ldlib2-ui.xsd">
    <stylesheet location="ldlib2:lss/mc.lss"/>
    <style>
        #alchemy_material_select_root {
            width: 460;
            height: 270;
            flex-direction: row;
            padding-all: 8;
            gap-all: 8;
            background: rect(rgba(0, 0, 0, 140), 6);
        }

        .panel {
            background: rect(#c6c6c6, 4, 1, #555555);
            padding-all: 6;
            gap-all: 6;
        }

        .left_panel {
            width: 240;
            flex-direction: column;
            height: 100%;
        }

        .right_panel {
            flex-grow: 1;
            flex-direction: column;
            height: 100%;
        }

        .panel_header {
            height: 22;
            align-items: center;
            justify-content: center;
            background: rect(#8e8e8e, 3);
        }

        #recipe_title {
            width: 100%;
            horizontal-align: center;
        }

        .sub_header {
            background: rect(#d4c4a8, 10, 1, #8d6e63);
            padding-horizontal: 6;
            padding-vertical: 2;
            horizontal-align: center;
            vertical-align: center;
        }

        .ingredient_nav {
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap-all: 4;
        }

        .ingredient_tabs {
            flex-direction: row;
            align-items: center;
            justify-content: center;
            width: 100%;
            gap-all: 4;
        }

        .ingredient_tab {
            width: 28;
            height: 28;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap-all: 2;
            background: none;
        }

        .ingredient_tab.active {
            background: rect(#f2d08c, 6, 1, #c27a2c);
        }

        .ingredient_icon {
            width: 14;
            height: 14;
        }

        .ingredient_icon_slot {
            width: 14;
            height: 14;
        }

        .ingredient_icon_fallback {
            color: #333333;
        }

        .ingredient_count {
            color: #2b2b2b;
            horizontal-align: center;
            vertical-align: center;
            width: 100%;
        }

        .item_grid {
            flex-grow: 1;
            background: rect(rgba(0, 0, 0, 40), 3);
            padding-all: 4;
            min-height: 110;
            width: 100%;
        }

        .grid_content {
            flex-direction: column;
            gap-all: 2;
            width: 100%;
        }

        .grid_row {
            flex-direction: row;
            gap-all: 2;
            height: 18;
        }

        .grid_slot_cell {
            width: 18;
            height: 18;
            position: relative;
        }

        .grid_slot_cell.selected {
            background: rect(rgba(255, 222, 140, 130), 3, 1, #c27a2c);
        }

        .grid_slot_item {
            width: 18;
            height: 18;
        }

        .grid_slot_check {
            position: absolute;
            top: -2;
            right: -2;
            width: 10;
            height: 10;
            align-items: center;
            justify-content: center;
            background: rect(#32b44a, 5);
            color: #ffffff;
            font-size: 8;
            z-index: 2;
            text-align: center;
            vertical-align: center;
        }

        .hint_text {
            color: #5a2a2a;
            horizontal-align: center;
        }

        .preview_card {
            flex-direction: column;
            gap-all: 6;
            flex-grow: 1;
            width: 100%;
        }

        .top_section {
            flex-direction: row;
            align-items: flex-start;
            gap-all: 8;
        }

        .item_icon_container {
            width: 52;
            height: 52;
            align-items: center;
            justify-content: center;
            background: rect(#f0f0f0, 20, 2, #b0b0b0);
        }

        .preview_item_slot {
            width: 32;
            height: 32;
        }

        .info_panel {
            flex-direction: column;
            gap-all: 4;
            flex-grow: 1;
        }

        .info_row {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            background: rect(#2b2b2b, 4);
            padding-horizontal: 6;
            padding-vertical: 2;
            width: 100%;
        }

        .info_label {
            color: #b5b5b5;
            font-size: 10;
        }

        .info_value {
            color: #ffffff;
            font-size: 12;
        }

        .info_label_text {
            flex-grow: 1;
        }

        .info_value_text {
            horizontal-align: right;
        }

        .quality_section {
            flex-direction: column;
            background: rect(#ffffff, 4, 1, #b0b0b0);
            padding-all: 4;
            gap-all: 4;
        }

        .quality_header {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }

        .quality_label_text {
            flex-grow: 1;
        }

        .quality_value_text {
            horizontal-align: right;
        }

        .quality_bar {
            flex-direction: row;
            align-items: center;
            gap-all: 2;
            padding-all: 2;
            background: rect(#e0e0e0, 3);
        }

        .quality_segment {
            width: 12;
            height: 6;
            background: rect(#d6d6d6, 1);
        }

        .quality_segment_fill {
            height: 6;
        }

        .quality_cycle_track {
            flex-grow: 1;
            min-width: 0;
            height: 6;
            background: rect(#d6d6d6, 1);
        }

        .quality_cycle_fill {
            height: 6;
        }

        .attributes_scroller {
            flex-grow: 1;
            width: 100%;
            min-height: 80;
            background: rect(#e2e2e2, 3, 1, #5a5a5a);
            padding-all: 4;
        }

        .action_bar {
            width: 100%;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            padding-top: 2;
        }

        .primary_button {
            background: rect(#c27a2c, 6, 1, #8d5a25);
            padding-horizontal: 10;
            padding-vertical: 3;
            flex-grow: 1;
        }

        .primary_button.disabled {
            background: rect(#9a9a9a, 6, 1, #6d6d6d);
        }

        .primary_button_label {
            color: #ffffff;
            font-size: 12;
            flex-grow: 1;
            horizontal-align: center;
        }

        .attributes_list {
            flex-direction: column;
            gap-all: 6;
            width: 100%;
            min-height: 12;
        }

        .attr_item {
            flex-direction: row;
            align-items: center;
            gap-all: 6;
            padding-vertical: 0;
            height: 20;
        }

        .attr_icon {
            width: 20;
            height: 20;
        }

        .attr_content {
            flex-direction: column;
            gap-all: 2;
            flex-grow: 1;
        }

        .attr_name {
            color: #2b2b2b;
            font-size: 11;
        }

        .attr_bar {
            flex-direction: row;
            align-items: flex-end;
            gap-all: 2;
            height: 12;
        }

        .bar_segment {
            width: 4;
            height: 6;
            background: rect(#d6d6d6, 1);
            align-self: flex-end;
        }

        .bar_segment_key {
            width: 6;
            height: 10;
            align-self: flex-end;
        }

        .effects_empty {
            color: #2b2b2b;
        }

        .row_space_between {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            gap-all: 4;
            width: 100%;
        }

        .row_align_center {
            flex-direction: row;
            align-items: center;
            gap-all: 4;
        }

        .material_icon {
            width: 16;
            height: 16;
        }

        .hidden {
            display: none;
        }
    </style>
    <root id="alchemy_material_select_root">
        <element id="material_select_left" class="panel left_panel">
            <element class="panel_header">
                <label id="recipe_title"/>
            </element>
            <label id="ingredient_filter" class="sub_header"/>
            <element id="ingredient_nav" class="ingredient_nav">
                <element id="ingredient_tabs" class="ingredient_tabs"/>
            </element>
            <scroller-view id="ingredient_grid" class="item_grid"/>
            <label id="basket_hint" class="hint_text"/>
        </element>
        <element id="material_select_right" class="panel right_panel">
            <element id="preview_card" class="preview_card">
                <element id="top_section" class="top_section">
                    <element id="item_icon_container" class="item_icon_container">
                        <element id="preview_item_slot" class="preview_item_slot"/>
                    </element>
                    <element id="info_panel" class="info_panel">
                        <element class="info_row">
                            <label id="level_label" class="info_label info_label_text"/>
                            <label id="level_value" class="info_value info_value_text"/>
                        </element>
                        <element class="info_row">
                            <label id="usage_label" class="info_label info_label_text"/>
                            <label id="usage_value" class="info_value info_value_text"/>
                        </element>
                        <element class="info_row">
                            <label id="craft_label" class="info_label info_label_text"/>
                            <label id="craft_value" class="info_value info_value_text"/>
                        </element>
                    </element>
                </element>
                <element id="quality_section" class="quality_section">
                    <element class="quality_header">
                        <label id="quality_label" class="quality_label_text"/>
                        <label id="quality_value" class="quality_value_text"/>
                    </element>
                    <element id="quality_bar" class="quality_bar"/>
                </element>
                <element id="attributes_scroller" class="attributes_scroller"/>
                <element id="combine_action" class="action_bar">
                    <element id="combine_button" class="primary_button">
                        <label id="combine_button_label" class="primary_button_label"/>
                    </element>
                </element>
            </element>
        </element>
    </root>
</ldlib2-ui>
