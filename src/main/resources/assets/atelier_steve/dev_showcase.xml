<?xml version="1.0" encoding="UTF-8" ?>
<ldlib2-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Low-Drag-MC/LDLib2/refs/heads/1.21/ldlib2-ui.xsd">
    <stylesheet location="ldlib2:lss/mc.lss"/>
    <style>
        #dev_showcase_root {
            width: 360;
            height: 220;
            padding-all: 8;
            gap-all: 8;
            background: rect(rgba(0, 0, 0, 140), 6);
        }

        .panel {
            flex-direction: column;
            background: rect(#c6c6c6, 4, 1, #555555);
            padding-all: 8;
            gap-all: 8;
            height: 100%;
            width: 100%;
        }

        .panel_header {
            height: 22;
            align-items: center;
            justify-content: center;
            width: 100%;
            background: rect(#8e8e8e, 3);
        }

        .panel_header_label {
            width: 100%;
            horizontal-align: center;
        }

        .star_showcase {
            flex-grow: 1;
            align-items: center;
            justify-content: center;
            gap-all: 6;
            width: 100%;
        }

        .input_row {
            flex-direction: row;
            align-items: center;
            gap-all: 6;
        }

        .input_label {
            color: #2b2b2b;
            min-width: 36;
        }

        .star_input {
            width: 120;
            height: 16;
            background: rect(#ffffff, 2, 1, #5a5a5a);
            padding-horizontal: 4;
        }

        .star_icon {
            width: 56;
            height: 56;
        }

        .star_note {
            color: #2b2b2b;
            font-size: 11;
        }
    </style>
    <root id="dev_showcase_root">
        <element class="panel">
            <element class="panel_header">
                <label id="dev_title" class="panel_header_label"/>
            </element>
            <element class="star_showcase">
                <element id="star_icon" class="star_icon"/>
                <element class="input_row">
                    <label id="star_color_label" class="input_label"/>
                    <text-field id="star_color_input" class="star_input"/>
                </element>
                <label id="star_note" class="star_note"/>
            </element>
        </element>
    </root>
</ldlib2-ui>
