<?xml version="1.0" encoding="UTF-8" ?>
<ldlib2-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Low-Drag-MC/LDLib2/refs/heads/1.21/ldlib2-ui.xsd">
    <stylesheet location="ldlib2:lss/mc.lss"/>
    <style>
        #alchemy_combine_root {
            width: 520;
            height: 270;
            flex-direction: row;
            padding-all: 8;
            gap-all: 8;
            background: rect(rgba(0, 0, 0, 140), 6);
        }

        .panel {
            background: rect(#c6c6c6, 4, 1, #555555);
            padding-all: 6;
            gap-all: 6;
        }

        .left_panel {
            width: 150;
            flex-direction: column;
            height: 100%;
        }

        .center_panel {
            flex-grow: 1;
            flex-direction: column;
            height: 100%;
            gap-all: 6;
        }

        .right_panel {
            width: 168;
            flex-direction: column;
            height: 100%;
        }

        .panel_header {
            height: 22;
            align-items: center;
            justify-content: center;
            width: 100%;
            background: rect(#8e8e8e, 3);
        }

        .panel_header_label {
            width: 100%;
            horizontal-align: center;
        }

        .stats_bar {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            background: rect(rgba(0, 0, 0, 40), 6);
            padding-horizontal: 6;
            padding-vertical: 2;
            gap-all: 6;
            width: 100%;
        }

        .stat_item {
            flex-direction: row;
            align-items: center;
            gap-all: 4;
            flex-grow: 1;
            justify-content: center;
        }

        .stat_icon {
            width: 10;
            height: 10;
        }

        .stat_value {
            color: #2b2b2b;
            font-size: 12;
        }

        .combine_grid {
            flex-grow: 1;
            width: 100%;
            background: rect(rgba(0, 0, 0, 40), 3);
            padding-all: 4;
            align-items: center;
            justify-content: center;
        }

        .combine_grid_content {
            flex-direction: column;
            gap-all: 2;
        }

        .combine_grid_row {
            flex-direction: row;
            gap-all: 2;
            height: 24;
        }

        .combine_grid_cell {
            width: 24;
            height: 24;
        }

        .success_bar {
            flex-direction: column;
            gap-all: 2;
            width: 100%;
        }

        .success_header {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            gap-all: 4;
            width: 100%;
        }

        .success_label {
            flex-grow: 1;
        }

        .success_track {
            flex-grow: 1;
            height: 6;
            background: rect(#2b2b2b, 3);
        }

        .success_fill {
            height: 6;
            background: rect(#f2d08c, 3);
        }

        .success_value {
            min-width: 26;
            horizontal-align: right;
            color: #2b2b2b;
        }

        .selected_list {
            flex-grow: 1;
            width: 100%;
            min-height: 120;
            background: rect(rgba(0, 0, 0, 40), 3);
            padding-all: 4;
        }

        .selected_list_content {
            flex-direction: column;
            gap-all: 2;
            width: 100%;
        }

        .selected_row {
            width: 100%;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            gap-all: 2;
            padding-vertical: 2;
        }

        .selected_row.selected {
            background: rect(rgba(245, 220, 170, 120), 2);
        }

        .selected_components {
            flex-direction: row;
            align-items: center;
            gap-all: 2;
            flex-grow: 1;
        }

        .selected_component_grid {
            flex-shrink: 0;
        }

        .selected_icon {
            width: 18;
            height: 18;
        }

        .selected_prefix {
            flex-shrink: 0;
            min-width: 24;
        }

        .selected_name {
            color: #2b2b2b;
            flex-grow: 1;
        }

        .ingredient_grid {
            flex-direction: column;
            gap-all: 1;
            background: rect(#392D23, 1);
            padding-all: 1;
        }

        .ingredient_row {
            flex-direction: row;
            gap-all: 1;
        }

        .ingredient_cell {
            width: 8;
            height: 8;
            align-items: center;
            justify-content: center;
        }

        .ingredient_cell_empty {
            background: rect(#635552, 1);
        }

        .ingredient_cell_normal {
            background: rect(#d44b4b, 1);
        }

        .ingredient_cell_link {
            align-items: center;
            justify-content: center;
        }

        .ingredient_star {
            width: 8;
            height: 8;
            background: sprite(atelier_steve:textures/gui/dev/star.png);
        }

        .hint_text {
            color: #5a2a2a;
            horizontal-align: center;
            width: 100%;
        }

        .preview_card {
            flex-direction: column;
            gap-all: 6;
            flex-grow: 1;
            width: 100%;
        }

        .top_section {
            flex-direction: row;
            align-items: flex-start;
            gap-all: 8;
        }

        .item_icon_container {
            width: 44;
            height: 44;
            align-items: center;
            justify-content: center;
            background: rect(#f0f0f0, 20, 2, #b0b0b0);
        }

        .preview_item_slot {
            width: 24;
            height: 24;
        }

        .info_panel {
            flex-direction: column;
            gap-all: 4;
            flex-grow: 1;
        }

        .info_row {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            background: rect(#2b2b2b, 4);
            padding-horizontal: 6;
            padding-vertical: 2;
            width: 100%;
        }

        .info_label {
            color: #b5b5b5;
            font-size: 10;
        }

        .info_value {
            color: #ffffff;
            font-size: 12;
        }

        .info_label_text {
            flex-grow: 1;
        }

        .info_value_text {
            horizontal-align: right;
        }

        .info_value_compact {
            font-size: 9;
        }

        .info_value_text {
            min-width: 20;
        }

        .quality_section {
            flex-direction: column;
            background: rect(#ffffff, 4, 1, #b0b0b0);
            padding-all: 4;
            gap-all: 4;
        }

        .quality_header {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }

        .quality_label_text {
            flex-grow: 1;
        }

        .quality_value_text {
            horizontal-align: right;
        }

        .quality_bar {
            flex-direction: row;
            align-items: center;
            gap-all: 2;
            padding-all: 2;
            background: rect(#e0e0e0, 3);
        }

        .quality_segment {
            width: 12;
            height: 6;
            background: rect(#d6d6d6, 1);
        }

        .quality_segment_fill {
            height: 6;
        }

        .quality_cycle_track {
            flex-grow: 1;
            min-width: 0;
            height: 6;
            background: rect(#d6d6d6, 1);
        }

        .quality_cycle_fill {
            height: 6;
        }

        .attributes_scroller {
            flex-grow: 1;
            width: 100%;
            min-height: 80;
            background: rect(#e2e2e2, 3, 1, #5a5a5a);
            padding-all: 4;
            align-items: center;
            justify-content: center;
        }

        .attributes_list {
            flex-direction: column;
            gap-all: 6;
            align-items: center;
            min-height: 12;
        }

        .attr_item {
            flex-direction: row;
            align-items: center;
            gap-all: 6;
            padding-vertical: 0;
            height: 20;
        }

        .attr_icon {
            width: 20;
            height: 20;
        }

        .attr_content {
            flex-direction: column;
            gap-all: 2;
            flex-grow: 1;
        }

        .attr_name {
            color: #2b2b2b;
            font-size: 11;
        }

        .attr_bar {
            flex-direction: row;
            align-items: flex-end;
            gap-all: 2;
            height: 12;
        }

        .bar_segment {
            width: 4;
            height: 6;
            background: rect(#d6d6d6, 1);
            align-self: flex-end;
        }

        .bar_segment_key {
            width: 6;
            height: 10;
            align-self: flex-end;
        }

        .bar_segment_locked {
            background: rect(#7a7a7a, 1);
            opacity: 0.65;
        }

        .effects_empty {
            color: #2b2b2b;
        }

        .row_align_center {
            flex-direction: row;
            align-items: center;
            gap-all: 4;
        }
    </style>
    <root id="alchemy_combine_root">
        <element id="combine_left" class="panel left_panel">
            <element class="panel_header">
                <label id="combine_title" class="panel_header_label"/>
            </element>
            <scroller-view id="selected_list" class="selected_list">
                <element id="selected_list_content" class="selected_list_content"/>
            </scroller-view>
            <label id="selected_hint" class="hint_text"/>
        </element>
        <element id="combine_center" class="panel center_panel">
            <element id="stats_bar" class="stats_bar"/>
            <element id="combine_grid" class="combine_grid"/>
            <label id="combine_hint" class="hint_text"/>
            <element id="success_bar" class="success_bar">
                <element class="success_header">
                    <label id="success_label" class="success_label"/>
                    <label id="success_value" class="success_value"/>
                </element>
                <element id="success_track" class="success_track">
                    <element id="success_fill" class="success_fill"/>
                </element>
            </element>
        </element>
        <element id="combine_right" class="panel right_panel">
            <element id="preview_card" class="preview_card">
                <element id="top_section" class="top_section">
                    <element id="item_icon_container" class="item_icon_container">
                        <element id="preview_item_slot" class="preview_item_slot"/>
                    </element>
                    <element id="info_panel" class="info_panel">
                        <element class="info_row">
                            <label id="level_label" class="info_label info_label_text"/>
                            <label id="level_value" class="info_value info_value_text"/>
                        </element>
                        <element class="info_row">
                            <label id="usage_label" class="info_label info_label_text"/>
                            <label id="usage_value" class="info_value info_value_text"/>
                        </element>
                        <element class="info_row">
                            <label id="craft_label" class="info_label info_label_text"/>
                            <label id="craft_value" class="info_value info_value_text info_value_compact"/>
                        </element>
                    </element>
                </element>
                <element id="quality_section" class="quality_section">
                    <element class="quality_header">
                        <label id="quality_label" class="quality_label_text"/>
                        <label id="quality_value" class="quality_value_text"/>
                    </element>
                    <element id="quality_bar" class="quality_bar"/>
                </element>
                <element id="attributes_scroller" class="attributes_scroller"/>
            </element>
        </element>
    </root>
</ldlib2-ui>
